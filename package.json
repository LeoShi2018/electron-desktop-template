{
  "name": "electron-desktop-template",
  "version": "1.0.0",
  "description": "一个完整的、生产就绪的 Electron 桌面应用开发模板",
  "main": "dist-electron/main/index.js",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "electron",
    "desktop",
    "template",
    "vue",
    "typescript",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/electron-desktop-template.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/electron-desktop-template/issues"
  },
  "homepage": "https://github.com/your-username/electron-desktop-template#readme",
  "scripts": {
    "dev": "npm run build:ts && electron-vite dev --config electron.vite.config.ts",
    "dev:vite": "vite --config vite.config.ts",
    "dev:electron": "npm run build:ts && cross-env NODE_ENV=development electron .",
    "build": "npm run type-check && npm run build:ts && electron-vite build --config electron.vite.config.ts && electron-builder",
    "build:ts": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "build:renderer": "vite build --config vite.config.ts",
    "build:main": "electron-vite build --config electron.vite.config.ts --mode production",
    "build:dev": "npm run build:ts && electron-vite build --config electron.vite.config.ts --mode development",
    "build:win": "npm run build:main && electron-builder --win",
    "build:mac": "npm run build:main && electron-builder --mac",
    "build:linux": "npm run build:main && electron-builder --linux",
    "build:all": "npm run build:main && electron-builder --win --mac --linux",
    "type-check": "vue-tsc --noEmit && tsc --noEmit -p tsconfig.main.json && tsc --noEmit -p tsconfig.preload.json",
    "preview": "vite preview --config vite.config.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config jest.config.js --testPathPattern=unit",
    "test:integration": "jest --config jest.config.js --testPathPattern=integration",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:electron": "playwright test --project=electron-main --project=electron-renderer --project=electron-performance --project=electron-platform",
    "test:electron:main": "playwright test --project=electron-main",
    "test:electron:renderer": "playwright test --project=electron-renderer",
    "test:electron:performance": "playwright test --project=electron-performance",
    "test:electron:platform": "playwright test --project=electron-platform",
    "test:electron:basic": "playwright test --project=electron-basic",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "format": "prettier --write src/ tests/ --ignore-path .gitignore",
    "format:check": "prettier --check src/ tests/ --ignore-path .gitignore",
    "prepare": "husky install",
    "clean": "rimraf dist dist-electron dist-renderer node_modules/.vite",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "pinia": "^2.1.0",
    "element-plus": "^2.4.0",
    "@element-plus/icons-vue": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.0.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.0",
    "typescript": "^5.3.0",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "rimraf": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.0",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0"
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "Your App Name",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron",
      "dist-renderer"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}

{
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist-electron/main",
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "electron"]
  },
  "include": ["src/main/**/*.ts", "src/main/**/*.js"],
  "exclude": [
    "src/renderer",
    "src/preload",
    "node_modules",
    "dist",
    "dist-electron/renderer",
    "dist-electron/preload"
  ]
}

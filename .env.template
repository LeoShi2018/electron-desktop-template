# 应用配置
VITE_APP_TITLE=Electron Desktop App
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=基于 Electron 的桌面应用

# 开发环境配置
NODE_ENV=development
VITE_MODE=development

# 开发服务器配置
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_OPEN=true

# 热重载配置
VITE_HMR_ENABLED=true
VITE_HMR_PORT=5174

# 调试配置
VITE_DEBUG_ENABLED=true
VITE_LOG_LEVEL=debug
VITE_DEVTOOLS_ENABLED=true
VITE_SOURCE_MAP=true

# 数据库配置（如果需要）
VITE_DB_NAME=app_database
VITE_DB_VERSION=1.0
VITE_DB_BACKUP_ENABLED=true

# 性能配置
VITE_PAGINATION_SIZE=20
VITE_SEARCH_DEBOUNCE=300
VITE_AUTO_SAVE_INTERVAL=30000

# 功能开关
VITE_FEATURE_BACKUP=true
VITE_FEATURE_EXPORT=true
VITE_FEATURE_IMPORT=true
VITE_FEATURE_REPORTS=true
VITE_FEATURE_DEBUG_PANEL=true
VITE_FEATURE_PERFORMANCE_MONITOR=true

# 安全配置
VITE_ENCRYPTION_ENABLED=true
VITE_SESSION_TIMEOUT=3600000

# 日志配置
VITE_LOG_MAX_FILES=7
VITE_LOG_MAX_SIZE=10485760

# 构建配置
VITE_BUILD_ANALYZE=false
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true

# 更新配置
VITE_AUTO_UPDATE_ENABLED=false
VITE_UPDATE_SERVER_URL=https://your-update-server.com

# API 配置（如果需要）
VITE_API_BASE_URL=https://api.yourapp.com
VITE_API_TIMEOUT=10000
VITE_API_RETRY_COUNT=3

# 第三方服务配置
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=your-analytics-id
VITE_CRASH_REPORTING_ENABLED=false
VITE_CRASH_REPORTING_DSN=your-sentry-dsn
